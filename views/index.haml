%html
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => 'width=device-width, initial-scale=1', :name => 'viewport'}/
    %title Insta Followers

    %link{:rel => :stylesheet, :type => :"text/css", :href => 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css'}
    %link{:rel => :stylesheet, :type => :"text/css", :href => 'assets/app.css'}
    %script{:src => 'https://use.fontawesome.com/38e56cc775.js'}
  %body
    %section.index-section
      <a href="https://github.com/gustavosobral/insta_followers"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png"></a>
      %h1.center-align.index Insta Followers
      %div.row.center-align
        %h5.light See the contacts on Instagram who isn't following you
      %div.row.center-align
        %a.waves-effect.waves-light.btn-large.btn-instagram{:href => "https://www.instagram.com/oauth/authorize/?client_id=312f2c0cf08c4581b4da949ea64bd8d2&redirect_uri=#{ENV['URL']}/login&response_type=code&scope=follower_list+relationships"}
          Login with Instagram
          %i.fa.fa-instagram.medium.left

    %footer.page-footer.light-blue.darken-3
      %div.container.row
        %div.col.l6.right-align
          %a{:href => '/policy'}
            %p.footer-link App Policy
        %div.col.l6.left-align
          %a{:href => 'mailto:ghsobral@gmail.com?Subject=Insta_Followers'}
            %p.footer-link Contact
      %div.footer-copyright
        %div.container.right-align
          Made with <i class="fa fa-heart"></i> using Sinatra!

    %script{:src => 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js'}
    %script{:src => 'assets/app.js'}
